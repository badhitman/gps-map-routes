<Window x:Class="GpsMapRoutes.SensorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GpsMapRoutes"
        mc:Ignorable="d"
        Title="SensorWindow" ResizeMode="NoResize" Height="226.184" Width="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="80" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <GroupBox Header="Координаты" Grid.Row="0">

        </GroupBox>
        <GroupBox Header="Описание" Grid.Row="1">

        </GroupBox>
        <GroupBox Header="Перспектива" Grid.Row="2">

        </GroupBox>
        <StackPanel HorizontalAlignment="Right" Grid.Row="3" Height="auto" Orientation="Horizontal" Margin="0,5,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
            <Button IsCancel="True" MinWidth="60">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
